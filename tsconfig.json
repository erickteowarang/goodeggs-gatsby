{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "components": ["./src/components/*"],
            "types": ["./src/types/*"],
            "theme": ["./src/theme/*"],
            "utils": ["./src/utils/*"]
        },
        "module": "commonjs",
        "target": "esnext",
        "jsx": "preserve",
        "lib": ["dom", "esnext"],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "allowJs": true
    },
    "exclude": ["node_modules", "public", ".cache"]
}
